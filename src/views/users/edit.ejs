<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
    <%- include('../partials/headercat') %>

    <section class = "creacion">
        <div class = "creacion-producto" >

            <h1>Editar usuario</h1>
            <div class = "infoUser">
                <form method="POST" action="/users/update/<%=user.id%>?_method=PUT" enctype="multipart/form-data">
                <p>Nombre:</p>
                <input type = "text" placeholder="<%= user.firstname %>" name = "firstname" value="<%= user.firstname %>">
                <p>Apellido:</p>
                <input type = "text" placeholder="<%= user.lastname %>" name = "lastname" value="<%= user.lastname %>">
                <p>Telefono:</p>
                <input type = "text" placeholder="<%= user.phone %>" name = "phone" value="<%= user.phone %>">
                <p>Email:</p>
                <input type = "text" placeholder="<%= user.email %>" name = "email" value="<%= user.email %>">
                <p>Imagen:</p>


                <input name = "oldImage" type = "hidden"  value = "<%= user.image %>">
                <input type = "file" type = "file"  name = "image" >
                    <button type="submit">Editar</button>
                </form>






                 
            





            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>